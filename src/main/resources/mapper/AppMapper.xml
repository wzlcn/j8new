<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wzl.j8new.dao.AppMapper" >

    <resultMap id="BaseResultMap" type="com.wzl.j8new.bean.App">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="app_version" property="appVersion" jdbcType="VARCHAR"/>
        <result column="time" property="time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="base-column-ref">
        id,app-version,time
    </sql>

    <insert id="insert" parameterType="com.wzl.j8new.bean.App">
         `app` (`app_version`,`time`)  values (#{appVersion},#{time})
    </insert>

    <select id="query" resultType="java.util.Map">
        select
        <if test="'01'.toString == '01'.toString">
            '1',
        </if>
        <if test="'01'.toString == '02.toString'">
            id2,
        </if>
        app_version,time from app
    </select>

    <select id="query2" resultType="java.util.Map">
        select * from ms_031_pb.level_relation
    </select>
</mapper>